<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="project.gasnow.user.model.mapper.GsRatingMapper">

    <!-- 회원 리뷰 목록 조회 -->
    <select id="getMyReview" resultType="ReviewItemDTO">
        SELECT R.created_at AS createdAt,
               S.station_name AS stationName,
               R.rating AS ratingScore
        FROM gs_rating R
            JOIN gas_staiton S ON S.gs_id = R.gs_id
        WHERE R.user_id = #{userId}
        ORDER BY R.created_at DESC
    </select>

    <!-- 회원 탈퇴 시 리뷰 삭제 -->
    <delete id="deleteUserReview">
        DELETE FROM gs_rating
        WHERE user_id = #{userId}
    </delete>
</mapper>
